#!/usr/bin/env bash
# Configure Nginx server to redirect to another page.

# Update package and install Nginx (if not already installed)
sudo apt-get update
sudo apt-get install -y nginx

# Start Nginx without systemctl
sudo service nginx start

# Configure Nginx to listen on port 80 and perform the redirection
echo 'server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 http://example.com/newpage;
    }

    location / {
        echo "Hello World!";
    }
}' | sudo tee /etc/nginx/sites-available/default

# Reload Nginx configuration
sudo service nginx reload

# if Nginx is not running
if ! pgrep -x "nginx" >/dev/null; then
    echo "Nginx failed to start or reload."
    exit 1
fi

# if successfull
echo "Nginx configured to redirect /redirect_me to another page with a 301 Moved Permanently response."
