#!/usr/bin/env bash
# install a web server: Install nginx on your web-01

# Update package and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# giving ownership to user ubuntu
sudo chown -R ubuntu /var/www

# hello world
echo "Hello World!" > /var/www/index.html

# symbolic link
sudo sed -i '/^\sserver_name.*/a \    rewrite ^redirect_me(/*) https://www.youtube.com/watch?v=QH2-TGUlwu4;' /etc/nginx/sites-avaliable/default

# 404 error
echo "Ceci n'est pas une page" > /var/www/html/404.html

sudo sed -i "/^\slocation.*/i \    error_page 404 /404.html;" /etc/nginx/sites-avaliable/default

sudo service nginx restart

# restart nginx
sudo service nginx reload
